= link_to '新規投稿', new_post_path, class: 'btn btn-primary mt-4'

.row
  - @posts.each do |post|
    .col-8.mt-4.mx-auto
      = link_to post_path(post), class: 'text-decoration-none' do
        .card.shadow
          .card-body
            .card-text
              = post.content
            .footer-text.text-end
              -# todo:コードが汚いので切り分ける
              - if user_signed_in?
                - if current_user.following?(post)
                  = button_to 'フォロー', root_path, class: 'btn btn-primary'
                - else
                  = button_to 'フォロー解除', root_path, class: 'btn btn-danger'
                = post.user.name
